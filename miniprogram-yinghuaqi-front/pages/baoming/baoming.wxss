/* 标题说明 */
.titleToast{
  width: 100%;
  margin:26rpx 0 26rpx 0;
  background-color: white;
  box-shadow: 0 0 7px rgb(235, 235, 235);
  padding: 22rpx;
  text-align: center;
}
.titleToastMain{
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 10rpx;
}
/*验证校园卡*/
.verifyImg{
  width: 100%;
  height: 850rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:10rpx;
}
.verifyImgDiv{
  width: 94%;
  height: 100%;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 0 7px rgb(201, 201, 201);
}
.verifyImgDivRight{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.verifyImgDivRightImg{
  height: 100%;
}
/*提交按钮*/
.butCenter{
  display: flex;
  justify-content: center;
  width: 100%;
}
.butSubmit{
  width: 40%;
  border-radius: 10px;
  line-height: 80rpx;
  height: 80rpx;
  margin:20rpx 0;
  box-shadow: 0 0 10px rgb(179, 178, 178);
  background-color:#efcbcb;
}
.butSubmit::after{
  border: none;
}

.text_red{
  color: red;
  font-size: larger;

}
/*上传照片*/
.uploadImg{
  width: 100%;
}
/*红色边框*/
.border-red{
  border: 3px solid red;
  border-radius: 10px;
}