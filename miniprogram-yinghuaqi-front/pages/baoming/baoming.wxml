<!--第一部分 个人信息部分 不可编辑  basicPersonalInfo-->
<view class="titleToast">
  第一部分 个人信息部分
  <view>注意：报名时需要您已完善个人信息，否则报名将<text class="text_red">失败</text></view>
</view>

<userInfo basicPersonalInfo="{{basicPersonalInfo}}"></userInfo>

<!--个人报名-->
<block wx:if="{{source == 'PERSONAL'}}">
  <!--第二部分 信息验证部分 可编辑  basicDescriptionList-->
  <view class="titleToast">
    第二部分 信息验证部分
  </view>

  <verifyPhone></verifyPhone>

  <!--第三部分 个人基本描述 可编辑  basicDescriptionList-->
  <view class="titleToast">
    第三部分 个人基本描述
  </view>

  <block wx:for="{{personalDescription}}" wx:key="index">
    <choice content="{{item}}" bindComponentTap="onComponentTap" data-name="personalDescription" data-index="{{index}}"></choice>
  </block>

  <!--第四部分 个人硬性要求 可编辑   hardRequirementsList-->
  <view class="titleToast">
    第四部分 个人硬性要求
    <view> 我们会在匹配过程中会<text class="text_red">完全</text>满足您的硬性要求</view>
  </view>

  <block wx:for="{{hardDemand}}" wx:key="index">
    <choice content="{{item}}" bindComponentTap="onComponentTap" data-name="hardDemand" data-index="{{index}}"></choice>
  </block>

  <!--第五部分 个人加分要求 可编辑 extraRequirementsList-->
  <view class="titleToast">
    第五部分 个人加分要求
    <view> 我们会在匹配过程中会<text class="text_red">尽量</text>满足您的加分要求</view>
  </view>

  <block wx:for="{{bonusDemand}}" wx:key="index">
    <choice content="{{item}}" bindComponentTap="onComponentTap" data-name="bonusDemand" data-index="{{index}}"></choice>
  </block>

  <view class="butCenter">
    <button class="butSubmit" bindtap="submit">提交</button>
  </view>
</block>

<!--组队报名-->
<block wx:if="{{source == 'TEAM'}}">

  <!--第二部分 信息验证部分 可编辑  basicDescriptionList-->
  <view class="titleToast">
    第二部分 信息验证部分
  </view>

  <verifyPhone></verifyPhone>

  <view class="uploadImg">
    <view class="uploadImgDiv"> 

    </view>
  </view>
  <!--第三部分 对方信息填写 可编辑  theOtherInfo-->
  <view class="titleToast">
    第三部分 对方信息填写
    <view> 注意：报名时需要双方均已完善个人信息，同时<text class="text_red">TA的个人标签</text>需要您的同伴提供，具体可在个人信息页面查看</view>
  </view>

  <block wx:for="{{theOtherInfo}}" wx:key="index">
    <choice content="{{item}}" bindComponentTap="onComponentTap" data-name="theOtherInfo" data-index="{{index}}"></choice>
  </block>

  <view class="butCenter">
    <button class="butSubmit" bindtap="submit">提交</button>
  </view>

</block>