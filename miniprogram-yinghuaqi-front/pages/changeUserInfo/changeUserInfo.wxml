<!--pages/changeUserInfo/changeUserInfo.wxml-->
<cu-custom bgColor="bg-pink" isBack="true">
	<view slot="content" class="text-black">个人信息</view>
</cu-custom>

<!--头部用户头像-->
<view class="uImg">
  <image class="uImgC" mode="widthFix" src="{{userInfo.avatarUrl}}"></image>
</view>
<!--列表-->
<view class="list">
  <view class="listC">
  <form>
    <!--姓名-->
    <view class="cu-form-group margin-top listCView radius">
      <view class="title">姓名</view>
      <input placeholder="{{userInfo.nickName}}"></input>
    </view>
    <!--性别-->
    <view class="cu-form-group margin-top listCView">
      <view class="title">性别</view>
      <picker bindchange="PickerChangeGender" value="{{genderIndex}}" range="{{gender}}">
        <view class="picker">
          {{gender[genderIndex]}}
        </view>
      </picker>
	  </view>
    <!--姓名-->
    <view class="cu-form-group margin-top listCView">
      <view class="title">QQ号</view>
      <input placeholder="577107479"></input>
    </view>
    <!--手机号-->
    <view class="cu-form-group listCView">
      <view class="title">手机号</view>
      <input placeholder="请输入手机号"></input>
      <button class="cu-btn bg-pink shadow" bindgetphonenumber="getPhoneNumber" open-type="getPhoneNumber" size="mini"><text>一键获取</text></button>
	  </view>
    <!--学校-->
    <view class="cu-form-group margin-top listCView">
      <view class="title">学校</view>
      <picker bindchange="PickerChangeSchool" value="{{schoolIndex}}" range="{{school}}">
        <view class="picker">
          {{school[schoolIndex]}}
        </view>
      </picker>
	  </view>
    <!--学院-->
    <view class="cu-form-group margin-top listCView">
      <view class="title">学院</view>
      <picker bindchange="PickerChangeCollege" value="{{collegeIndex}}" range="{{college}}">
        <view class="picker">
          {{college[collegeIndex]}}
        </view>
      </picker>
	  </view>
    <!--提交-->
    <view class="listCSubmitDiv">
      <button bindtap="submitInfo" class="cu-btn bg-pink shadow listCSubmit"><text>提交</text></button>
    </view>
  </form>
  </view>
</view>