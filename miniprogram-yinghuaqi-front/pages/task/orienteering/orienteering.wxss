
.head{
  width: 100%;
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.headDiv{
  width: 90%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color:white; 
  border-radius: 10px;
  box-shadow: 0 0 10px rgb(199, 199, 199);
}
.headDivFirst{
  width: 80%;
  padding: 25rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.headDivTwo{
  font-size: 24px;
  font-weight: 600;
}
.headDivThree{
  padding: 20rpx;
  width: 80%;
  display: flex;
  justify-content: space-around;
}
/*单人任务头部tab*/
.tab{
  margin-top: 10rpx;
  padding-top: 10rpx;
  width: 80%;
  font-size: 15px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: black;
}
.selected{
  border-bottom:4px solid rgb(94, 94, 94);
}
/*任务*/
.taskFlex{
  width: 100%;
  height: 1200rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
}
.taskCommon{
  width: 95.5%;
  background-color:white; 
  border-radius: 10px;
  box-shadow: 0 0 10px rgb(199, 199, 199);
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 20rpx 0;
}
.taskCommonOne{
  width: 24%;
}
.taskCommonTwo{
  width: 67%;
  display: flex;
  align-items: center;
}
.taskStatusImg{
  width: 50rpx;
  margin-right: 20rpx;
}
.taskCommonThree{
  width: 9%;
}
.tabBarImg{
  width: 100%;
}
/*任务详细*/
.taskInfo{
  width: 90%;
  background-color:white; 
  border-radius: 10px;
  box-shadow: 0 0 10px rgb(199, 199, 199);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.taskInfoItem{
  margin:15rpx 0;
}
/*二维码图片*/
.erweima{
  width: 400rpx;
}
/*标题*/
.titleText{
  margin-bottom: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background-color: white;
}
.bigText{
  font-size: 17px;
  color: black;
  font-weight: 600;
}
/*粉红色渐变背景*/
.gradientPinkBg{
  background-color:white; 
}

/*成语输入框*/
.resultDiv{
  padding: 30rpx 20rpx;
  width: 100%;
  background: white;
  border-radius: 10px;
  box-shadow: 0 0 10px rgb(218, 218, 218);
  display: flex;
  align-items: center;
}
.resultDivOne{
  width: 20%;
}
.resultDivTwo{
  width:55%
}
.resultDivThree{
  width: 25%;
  text-align: center;
  line-height:66rpx ;
  background-color:white; 
}
.resultDivThree::after{
  border: none;
}
/*取消第一个的底部padding*/
.noPaddingBottom{
  padding-bottom:0;
}